
<div class="form-group col-md-3">
	<h1>Register!</h1>
	<form action="/users" method="post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<label>Name:</label>
		<div>
			<input class="form-control" type="text" name="user[name]">
		</div>
		<label>Email:</label>
		<div>
			<input class="form-control" type="text" name="user[email]">
		</div>
		<label>City:</label>
		<div>
			<input  class="form-control"type="text" name="user[city]">
		</div>
		<label>State:</label>
		<div>
			<select class="form-control" name="user[state]">
				<% @states.each do |state| %>
				<option value="<%= state.id %>"><%= state.state %></option>
				<% end %>
			</select>
		</div>
		<label>Password:</label>
		<div>
			<input class="form-control" type="password" name="user[password]">
		</div>
		<label>Password Confirmation:</label>	
		<div>
			<input class="form-control" type="password" name="user[password_confirmation]">
		</div>
		<br>

		<input class="btn btn-primary" type="submit" value="Register">
			
	</form>
	<% if flash[:reg_errors] %>
		<% flash[:reg_errors].each do |error| %>
			<p><%= error %></p>
		<% end %>	
	<% end %>
	<h1>Login!</h1>
	<form action="/sessions" method="post">
		<input class="form-control" type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<label>Email:</label>
		<div>
			<input class="form-control" type="text" name="login[email]">
		</div>
		<label>Password</label>
		<div>
			<input class="form-control" type="password" name="login[password]">
		</div>
		<br>
		<input class="btn btn-primary" type="submit" value="Login">
	</form>

		<%= flash[:login_errors] %>





</div>